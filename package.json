{
  "name": "sistema-gestion-asistencia",
  "version": "1.3.0",
  "description": "Sistema de Gestión de Asistencia para Enviaseo E.S.P. - Versión final con panel optimizado y scripts de reinicio",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && npm --prefix backend install && npm --prefix frontend install && npm --prefix backend-alcaldia install && npm --prefix backend-enviaseo-control-acceso install",
    "start": "npm run start-all",
    "start-all": "concurrently \"npm run start-frontend\" \"npm run start-backend\" \"npm run start-alcaldia\" \"npm run start-enviaseo\"",
    "start-frontend": "npm --prefix frontend start",
    "start-backend": "npm --prefix backend start",
    "start-alcaldia": "npm --prefix backend-alcaldia start",
    "start-enviaseo": "npm --prefix backend-enviaseo-control-acceso start",
    "start-demo": "npm --prefix frontend start",
    "restart-panel": "REINICIAR_PANEL.bat",
    "restart-frontend": "INICIAR_SOLO_FRONTEND.bat",
    "install-improved": "INSTALADOR_MEJORADO.bat",
    "install-quick": "INSTALADOR_RAPIDO.bat",
    "install-basic": "INSTALAR_SISTEMA.bat",
    "diagnose": "DIAGNOSTICO_SISTEMA.bat",
    "build": "npm --prefix frontend run build",
    "build-all": "npm run build",
    "build-demo": "npm --prefix frontend run build",
    "dev": "npm run start-all",
    "demo": "npm run start-demo",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "npm run clean:node-modules && npm run clean:build",
    "clean:node-modules": "rimraf node_modules && rimraf frontend/node_modules && rimraf backend/node_modules && rimraf backend-alcaldia/node_modules && rimraf backend-enviaseo-control-acceso/node_modules",
    "clean:build": "rimraf frontend/build",
    "clean:project": "LIMPIAR_PROYECTO.bat",
    "setup": "npm run install-all",
    "postinstall": "echo \"✅ Instalación completada. Ejecuta 'npm start' para iniciar la aplicación\"",
    "git-status": "git status",
    "git-log": "git log --oneline -10",
    "git-pull": "git pull origin main",
    "git-push": "git push origin main"
  },
  "keywords": [
    "asistencia",
    "horas-extras",
    "excel",
    "react",
    "nodejs",
    "open-source",
    "microservices",
    "gestion-empleados",
    "enviaseo",
    "demo-mode",
    "animaciones",
    "efectos-visuales",
    "ui-mejorada",
    "puertos-optimizados",
    "sin-conflictos",
    "version-ligera",
    "panel-reinicio",
    "modo-demo",
    "carga-inmediata",
    "instaladores-mejorados",
    "diagnostico-sistema",
    "instalacion-personalizada"
  ],
  "author": "envíaseo E.S.P.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/envíaseo/sistema-gestion-asistencia.git"
  },
  "bugs": {
    "url": "https://github.com/envíaseo/sistema-gestion-asistencia/issues"
  },
  "homepage": "https://github.com/envíaseo/sistema-gestion-asistencia#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "react-router-dom": "^7.7.0"
  }
}
